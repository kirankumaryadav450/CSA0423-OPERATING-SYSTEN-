#include <stdio.h>
#include <string.h>

struct directory {
    char dname[10];         
    char fname[20][10];    
    int fcount;             
};

int main() {
    struct directory dir;
    int choice, i;
    char fname[10];

    printf("Enter the name of the directory: ");
    scanf("%s", dir.dname);
    dir.fcount = 0;

    while (1) {
        printf("\n--- SINGLE LEVEL DIRECTORY MENU ---\n");
        printf("1. Create File\n");
        printf("2. Delete File\n");
        printf("3. Search File\n");
        printf("4. Display Files\n");
        printf("5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {

        case 1:  // CREATE FILE
            printf("Enter file name to create: ");
            scanf("%s", fname);

            strcpy(dir.fname[dir.fcount], fname);
            dir.fcount++;

            printf("File created successfully.\n");
            break;

        case 2:  // DELETE FILE
            printf("Enter file name to delete: ");
            scanf("%s", fname);

            for (i = 0; i < dir.fcount; i++) {
                if (strcmp(fname, dir.fname[i]) == 0) {
                    printf("File %s deleted.\n", dir.fname[i]);

                    // Replace deleted file with last file
                    dir.fcount--;
                    strcpy(dir.fname[i], dir.fname[dir.fcount]);
                    break;
                }
            }

            if (i == dir.fcount)
                printf("File not found.\n");

            break;

        case 3:  // SEARCH FILE
            printf("Enter file name to search: ");
            scanf("%s", fname);

            for (i = 0; i < dir.fcount; i++) {
                if (strcmp(fname, dir.fname[i]) == 0) {
                    printf("File found: %s\n", dir.fname[i]);
                    break;
                }
            }

            if (i == dir.fcount)
                printf("File not found.\n");

            break;

        case 4:  // DISPLAY FILES
            printf("\nDirectory Name: %s\n", dir.dname);
            printf("Files:\n");

            for (i = 0; i < dir.fcount; i++)
                printf("%s\n", dir.fname[i]);

            break;

        case 5:
            return 0;

        default:
            printf("Invalid choice!\n");
        }
    }
}
